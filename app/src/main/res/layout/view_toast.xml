<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_toast_bg"
    android:padding="@dimen/margin_16" >

    <ImageView
        android:id="@+id/common_toast_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toast_tips_icon" />

    <TextView
        android:id="@+id/common_toast_tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_toast_iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/list_second_level" />

</RelativeLayout>