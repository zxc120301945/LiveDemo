<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_back_rl_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/titlebar_back_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:background="@drawable/common_text_bg_selector"
        android:paddingBottom="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_8"
        android:src="@drawable/white_back" />

    <TextView
        android:id="@+id/titlebar_back_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="middle"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/common_tv_color_best"
        android:textSize="@dimen/list_first_level" />

    <ImageView
        android:id="@+id/titlebar_back_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_toRightOf="@+id/titlebar_back_tv_title"
        android:src="@drawable/down_small_triangle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titlebar_word_detail_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/titlebar_back_iv_back"
        android:ellipsize="middle"
        android:gravity="center_horizontal"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/list_first_level" />

    <!-- 右边-图标 -->

    <ImageView
        android:id="@+id/titlebar_back_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_8"
        android:src="@drawable/search"
        android:visibility="gone" />

    <!-- 右边-文字 -->

    <TextView
        android:id="@+id/titlebar_back_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:background="@drawable/common_text_bg_selector"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/list_first_level"
        android:visibility="gone" />

</RelativeLayout>